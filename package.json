{
  "name": "trabalho-final-cypress",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "cypress run",
    "cy:open": "cypress open",
    "cy:headed": "cypress run --headed --browser chrome",
    "cy:record": "cypress run --record",
    "test:mochawesome": "cypress run --reporter mochawesome",
    "merge-reports": "npx mochawesome-merge cypress/results/*.json > mochawesome.json",
    "generate-report": "npx marge mochawesome.json -f mochawesome -o cypress/reports",
    "clean-results": "rm -f cypress/results/*.json mochawesome.json && rm -rf cypress/results/.jsons",
    "report:ci": "npm run test:mochawesome && npm run merge-reports && npm run generate-report && npm run clean-results"
  },
  "devDependencies": {
    "cypress": "^12.0.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0"
  }
}
